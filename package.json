{
  "name": "arrays-demo",
  "version": "0.0.1",
  "description": "An array processing method demo",
  "main": "index.html",
  "scripts": {
    "css": " cp src/app.css dist/app.css",
    "build": "npm run html && npm run scripts && npm run css",
    "html": "npm-html2js -i 'src/**/*.html' -o '.tmp/templates.js' -b 'src'",
    "livereload": "echo 'ok' && live-reload --port 9091 dist/",
    "serve": "npm run watch & http-server ./",
    "scripts": "uglifyjs src/app.js src/**/*.js .tmp/*.js > dist/app.min.js -b",
    "watch": "npm-watch & npm run livereload"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,css,html",
      "ignore": "dist/*.js"
    }
  },
  "author": "Stephan Muller",
  "license": "MIT",
  "devDependencies": {
    "angular": "^1.5.0",
    "angular-ui-router": "^0.2.18",
    "http-server": "^0.9.0",
    "live-reload": "^1.1.0",
    "npm-html2js": "^0.1.8",
    "npm-watch": "^0.1.1",
    "uglify-js": "^2.6.2"
  }
}
