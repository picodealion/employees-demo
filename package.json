{
  "name": "idea",
  "version": "0.0.1",
  "description": "A website to list ideas",
  "main": "index.html",
  "scripts": {
    "build": "browserify src/app.js > dist/app.min.js && cp src/style.css dist/style.css",
    "serve": "npm run watch & http-server ./",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": ["src"],
      "extensions": "js,css,html"
    }
  },
  "author": "Stephan Muller",
  "license": "MIT",
  "devDependencies": {
    "angular": "^1.5.0",
    "browserify": "^13.0.0",
    "http-server": "^0.9.0",
    "npm-watch": "^0.1.1"
  }
}
